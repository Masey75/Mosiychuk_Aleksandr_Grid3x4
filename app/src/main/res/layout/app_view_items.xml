<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/app_item_image"
        android:layout_width="@dimen/side_icon"
        android:layout_height="@dimen/side_icon"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_TextView"

        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/app_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/side_icon"
        android:layout_gravity="center"
        android:background="@color/colorBackgroundTextview"
        android:gravity="center"
        android:textColor="@color/colorBackgroundDown" />
</android.support.v7.widget.CardView>